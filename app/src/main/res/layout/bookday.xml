<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bookday">


    <TextView
            android:text="Enter details for appointment here"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="306dp"
            android:layout_height="43dp"
            android:id="@+id/textView3" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Name:"
            android:layout_width="120dp"
            style="@android:style/TextAppearance.Medium"
            android:layout_height="27dp"
            android:id="@+id/textView4" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="email:"
            android:layout_width="117dp"
            style="@android:style/TextAppearance.Medium"
            android:layout_height="22dp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="Phone Number:"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="117dp"
            android:layout_height="22dp"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text=""
            style="@android:style/TextAppearance.Medium"
            android:layout_width="213dp"
            android:layout_height="34dp"
            android:id="@+id/displayDay"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/getPhoneNumber" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>


    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/displayDay"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book"
            android:text="Confirm"
            app:layout_constraintStart_toEndOf="@+id/cancel" android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/displayDay"/>
    <EditText
            android:layout_width="214dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/getName"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="4dp" android:layout_marginLeft="4dp"/>
    <EditText
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/getEmail" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/getName" app:layout_constraintStart_toEndOf="@+id/textView5"
    />
    <EditText
            android:layout_width="218dp"
            android:layout_height="40dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/getPhoneNumber" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/getEmail" app:layout_constraintStart_toEndOf="@+id/textView6"
    />
    <TextView
            android:text="Day Selected"
            android:layout_width="119dp"
            android:layout_height="31dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
</android.support.constraint.ConstraintLayout>