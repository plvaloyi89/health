<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageView
            android:layout_width="135dp"
            android:layout_height="144dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/item_image" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="205dp"
            android:layout_height="35dp"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/item_name"
            app:layout_constraintStart_toEndOf="@+id/item_image"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="201dp"
            android:layout_height="49dp"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/item_desc"
            app:layout_constraintTop_toBottomOf="@+id/item_name" app:layout_constraintStart_toEndOf="@+id/item_image"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="89dp"
            android:layout_height="31dp"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/item_price" app:layout_constraintStart_toEndOf="@+id/item_image"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_desc"/>
    <Button
            android:text="Add "
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:id="@+id/button_Purchase"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/item_price" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_desc" app:layout_constraintHorizontal_bias="0.555"/>




</android.support.constraint.ConstraintLayout>